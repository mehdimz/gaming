extends ../layout
include ../common/slider
include ../common/sideblock-videos
include ../common/games-sidebar

block content 
  +slider(data.bannerGames)
  .container.youplay-news
    .col-md-9
      h1.mt-0 تازه ها
      each item in data.items 
        .news-one
          .row.vertical-gutter
            .col-md-4
              a.angled-img(href=item.page)
                .img
                  img(src=item.poster.medium, alt=item.title)
                .over-info.bottom.h4= moment(item.date).format('jD jMMMM jYYYY') 
            .col-md-8
              .clearfix
                h3.h2.pull-left.m-0
                  a(href='blog-post-1.html')= item.title
              //- .tags
              //-   i.fa.fa-tags
              //-   a(href='#') world of warcraft
              //-   | , 
              //-   a(href='#') legion
              //-   | , 
              //-   a(href='#') تاریخ اکران
              //-   | , 
              //-   a(href='#') game
              .description
                p= item.gist
              a.btn.read-more.pull-left(href=item.page) ادامه خبر
      nav
        ul.pager
          li
            a(href='#') بعدی
          li
            a(href='#') قبلی
    .col-md-3
      +sideblock-videos('پر بازدیدترین ها', data.populars)
      +games-sidebar(data.games, 'نقد بازی')


block addscript
  script(type='text/javascript', src='/plugins/slider-revolution/examples&source/rs-plugin/js/jquery.themepunch.tools.min.js')
  script(type='text/javascript', src='/plugins/slider-revolution/examples&source/rs-plugin/js/jquery.themepunch.revolution.min.js')
  script(type='text/javascript', src='/plugins/isotope/isotope.pkgd.min.js')