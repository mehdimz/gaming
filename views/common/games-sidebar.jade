mixin games-sidebar(cats, title)
  .side-block.right-side
    h4.block-title= title
    .block-content.p-0
      each cat in cats
        .row.youplay-side-news
          .col-xs-3.col-md-4
            a.angled-img(href=cat.url, title=cat.fullname)
              .img-square
                img(src=cat.poster.sm, alt=cat.fullname)
          .col-xs-9.col-md-8
            h4.ellipsis
              a(href=cat.url, title=cat.fullname)= cat.fullname