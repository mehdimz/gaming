mixin video-carousel(items)
  .youplay-carousel
    each item in items
      a.angled-img(href='/videos/#{item._id}')
        .img
          img(src='/images/clips/500/#{item._id}.jpg', alt='')
          .badge.duration-badge.bg-default.bg-transparent
            = moment.utc(item.duration * 1000).format("mm:ss")
            i.fa.fa-clock-o
          .badge.date-badge.bg-default.bg-transparent
            = moment(item.date).fromNow()
        .over-info
          div
            div
              h4= item.title
              i.fa.fa-play.icon