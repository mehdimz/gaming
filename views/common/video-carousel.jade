mixin video-carousel(items, isTrailer)
  .youplay-carousel
    each item in items
      a.angled-img(href='/videos/#{item._id}')
        .img
          img(src='/images/clips/500/#{item._id}.jpg', alt='')
          .badge.duration-badge.bg-default.bg-transparent
            = moment.utc(item.duration * 1000).format("mm:ss")
            i.fa.fa-clock-o
          .badge.date-badge.bg-default.bg-transparent
            = moment(item.date).fromNow()

        if isTrailer
          .bottom-info
            h4(style="overflow:hidden;height:35px;margin-bottom:10px;")= item.title
            .row(style="border-top:1px solid #fff; padding-top:10px; margin:0;")
              .col-xs-12
                .platform= item._category._platforms.map(function(x){return x.name}).join() 
                  

        else 
          .over-info
            div
              div
                h4= item.title
                i.fa.fa-play.icon
