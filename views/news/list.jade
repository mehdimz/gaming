              //-   a(href='#') legion
              //-   | , 
              //-   a(href='#') تاریخ اکران
              //-   | , 
              //-   a(href='#') game
              .description
                p= item.gist
              a.btn.read-more.pull-left(href=item.page) ادامه خبر
      nav
        ul.pager
          li
            a(href='#') بعدی
          li
            a(href='#') قبلی

