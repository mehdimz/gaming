extends ../layout
include ../common/sideblock-videos
include ../common/genres-sidebar
block content
  section.content-wrap
    // Banner
    .youplay-banner.banner-top.youplay-banner-parallax.xsmall
      .image(style="background-image: url('/images/banner-blog-bg.jpg')")
      .info
        div
          .container
            h2= item.title
    // /Banner
    .container.youplay-news.youplay-post
      .col-md-9
        // Post Info
        article.news-one
          .video-player
            .video-js.vjs-default-skin.vjs-paused
              video#example_video_1.vjs-tech(style='position:relative; z-index:0;', controls='', preload='none', width='100%', height='auto', poster='/images/clips/1000/#{item._id}.jpg', data-setup='{}')
                source(src='/data/#{item._id}.mp4', type='video/mp4')
                //- track(kind='captions', src='shared/example-captions.vtt', srclang='en', label='English')
                //- // Tracks need an ending tag thanks to IE9
                //- track(kind='subtitles', src='shared/example-captions.vtt', srclang='en', label='English')
                //- // Tracks need an ending tag thanks to IE9
                p.vjs-no-js
                  | برای دیدن این ویدیو لطفا javascript مرورگر را فعال کنید
                  a(href='#', target='_blank')
          .youplay-review-rating
            // Post Tags
            .tags
              i.fa.fa-tags
              each tag in item._tags
                a(href='#')= tag.name
                | ,
            // /Post Tags
            // Post Meta
            .meta
              .item
                i.fa.fa-user.meta-icon
                span انتشار کننده 
                a(href='#!')= item._creator.fullname
              .item
                i.fa.fa-calendar.meta-icon
                span تاریخ انتشار 
                a(href='#!')= moment(item.date).format('jD jMMMM jYYYY') 
              .item
                i.fa.fa-bookmark.meta-icon
                span دسته 
                a(href='#!')= item._genre.name 
              .item
                i.fa.fa-eye.meta-icon
                span بازدید
                span= item.viewCount
              .item
                a#thumb-up(href='#', data-clip-id="#{item._id}")
                  i.fa.fa-heart
                  span.count= item.thumbs.up
            // /Post Meta
          // Post Share
          //- .btn-group.social-list.social-likes(data-counters='no')
          //-   span.btn.btn-default.facebook(title='Share link on Facebook')
          //-   span.btn.btn-default.twitter(title='Share link on Twitter')
          //-   span.btn.btn-default.plusone(title='Share link on Google+')
          //-   span.btn.btn-default.pinterest(title='Share image on Pinterest', data-media='')
          //-   span.btn.btn-default.vkontakte(title='Share link on VK')
          // /Post Share
        // /Post Info
        // Post Comments
        .comments-block
          h3
            | نظرات 
            small (#{item.comments.length})
          // Comment Form
          form.comment-form(action='/videos/#{item._id}/comments', method="post")
            .comment-avatar.pull-left
              img(src='/images/avatar.png', alt='')
            .comment-cont.clearfix
              //- .youplay-input
              //-   input(type='text', name='username', placeholder='نام *', required='')
              //- .youplay-input
              //-   input(type='email', name='email', placeholder='پست الکترونیکی *', required='')
              .youplay-textarea
                textarea(name='comment', rows='5', placeholder='نظر شما... *', required='')
              button.btn.btn-default.pull-right ارسال نظر
          // /Comment Form
          // Comments List
          ul.comments-list
            // Kristen Bradley comment
            each comment in item.comments
              li
                article
                  .comment-avatar.pull-left
                    img(src='/images/avatar.png', alt='')
                  .comment-cont.clearfix
                    a.comment-author.h4(href='#!')= comment._user.fullname
                    .date
                      i.fa.fa-calendar
                      span= moment(comment.date).fromNow()
                    .comment-text= comment.body
                    //- .pull-left.review-like
                    //-   a.text-success(href='#!')
                    //-     i.fa.fa-thumbs-up
                    //-     |  12
                    //-   a.text-danger(href='#!')
                    //-     i.fa.fa-thumbs-down
                    //-     |  1
                    //- a.pull-right(href='#!') پاسخ
              //- ul.child-comment
              //-   // Mike Pearson comment
              //-   li
              //-     article
              //-       .comment-avatar.pull-left
              //-         img(src='/images/avatar.png', alt='')
              //-       .comment-cont.clearfix
              //-         a.comment-author.h4(href='#!') مهدی زنگنه
              //-         .date
              //-           i.fa.fa-calendar
              //-           |  5 دقیقه قبل
              //-         .comment-text
              //-           | می ترکونیم
              //-         .pull-left.review-like
              //-           a.text-success(href='#!')
              //-             i.fa.fa-thumbs-up
              //-             |  12
              //-           a.text-danger(href='#!')
