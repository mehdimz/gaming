extends ../../layout
include ../../common/slider
include ../../common/sideblock-videos
include ../../common/news-sidebar

block title
  title ویدیوها
  meta(name='description', content='جدید ترین ویدیوها بازی ها')
  meta(name='twitter:card', value='جدید ترین ویدیوها بازی ها')
  meta(property='og:title', content='جدید ترین ویدیوها بازی ها')
  meta(property='og:type', content='news')
  meta(property='og:description', content='جدید ترین ویدیوها بازی ها')


block content 
  .container.mt-100
    .col-md-9
      h1.mt-0 
        | تازه ترین ویدیوها
        if data.genre
          | ی
          = data.genre.name

        if data.platform
          | ی
          = data.platform.name
      each item in data.items 
        .news-one
          .row.vertical-gutter
            .col-md-4
              a.angled-img(href=item.page, title=item.title)
                .img
                  img(src=item.poster.md, alt=item.title)
            .col-md-8
              .clearfix
                h3.h2.pull-left.m-0
                  a(href=item.page)= item.title
              .description
                p= item.body
              a.btn.read-more.pull-right(href=item.page, title=item.title) مشاهده
          hr    
      //- nav
      //-   ul.pager
      //-     li
      //-       a(href='#') بعدی
      //-     li
      //-       a(href='#') قبلی
    .col-md-3
      +news-sidebar('پر بازدیدترین اخبارها', data.popularNews)
      +sideblock-videos('پر بازدیدترین ویدیوها', data.populars)
