form(method="post", action=(item?"/cats/#{item._id}":"/cats"), enctype="multipart/form-data")
  .form-group
    input.form-control(type="text", name="name", value=(item?item.name:''))
  .form-group
    input.form-control(placeholder="subtitle", name="subtitle", value=(item ? item.subtitle : ''), required)
  .form-group
    textarea.form-control(name="about", placeholder="درباره بازی")
      = item ? item.about : '' 
  .form-group
    textarea.form-control(name="critic", placeholder="نقد بازی")
      = item ? item.critic : '' 

  .form-group
    input.form-control(name="score", type="number", step="0.1", min="1", max="10", value=(item ? item.score : ''))

  .form-group.clearfix
    span.pull-left تصویر
    input.pull-left(type="file", name="image", required=(item ? false : 'required'))                  

  .form-group.clearfix
    span.pull-left تصویر اسلایدر
    input.pull-left(type="file", name="sliderImage", required=(item ? false : 'required'))                  

  fieldset.form-group
    input.form-control(name="releasedate",  value=(item ? item.releasedate : ''), placeholder="2017/01/01 مثال" ) 

  fieldset.form-group
    label(for="inBanner") نمایش در بنر
    input#inBanner(type="checkbox", checked=(item ? item.inBanner : false), name="inBanner")

  button.btn.btn-secondary(type="submit", class=(item ? 'btn-info':'')) ثبت +