nav.navbar-youplay.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='off-canvas', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bard
        span.icon-bar
      a.navbar-brand(href='/')
        img(src='/images/logo.png', alt='')
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav
        li.dropdown.dropdown-hover
          a.dropdown-toggle(href='/', data-toggle='dropdown', role='button', aria-expanded='false')
            | خانه 
            span.label Home
        li.dropdown.dropdown-hover
          a.dropdown-toggle(href='#!', data-toggle='dropdown', role='button', aria-expanded='false')
            | بازی ها 
            span.caret
            span.label Games
          .dropdown-menu
            ul(role='menu')
              li.dropdown.dropdown-submenu.pull-left
                a.dropdown-toggle(href='#!', data-toggle='dropdown', role='button', aria-expanded='false') بر اساس پلتفرم
                .dropdown-menu(style='width: 310px;')
                  ul(role='menu').two-columns
                    each platform in platforms
                      li
                        a(href='/genre/view')= platform.name
              li.dropdown.dropdown-submenu.pull-left
                a.dropdown-toggle(href='#!', data-toggle='dropdown', role='button', aria-expanded='false') بر اساس سبک  
                .dropdown-menu(style='width: 380px;')
                  ul(role='menu').two-columns
                    each genre in genres
                      li
                        a(href='/genre/view/#{genre._id}/#{genre.name}')= genre.name

        li.dropdown.dropdown-hover
          a.dropdown-toggle(href='#!', data-toggle='dropdown', role='button', aria-expanded='false')
            | تماس با ما 
            span.label Contact
      ul.nav.navbar-nav.navbar-right
        if !currentUser
          li.dropdown.dropdown-hover
            a.dropdown-toggle.btn-xs(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
              | ثبت نام
              span.caret
              span.label Register
            .dropdown-menu(style='width:222px;')
              ul(role='menu')
                li
                  a(href='/auth/signup') کاربر عادی
                //- li
                //-   a(href='#') کاربر ویژه
                //- li.divider
                //- li
                //-   a(href='#')  تفاوت کاربر عادی با کاربر ویژه
              //
          li
            a.btn-xs(href='/auth/login')
              | ورود
              span.label Login
        else
          li.dropdown.dropdown-hover
            a.dropdown-toggle(href='#!', data-toggle='dropdown', role='button', aria-expanded='false')
              = currentUser.fullname  
              //- span.badge.bg-default 2
              span.caret
              if currentUser.admin
                span.label ادمین
            .dropdown-menu
              ul(role='menu')
                if currentUser.admin
                  li
                    a(href='/clips/new') آپلود ویدیو
                  li
                    a(href='/cats/new') بازی
                  li
                    a(href='/platforms') پلت فرم
                  li
                    a(href='/genres') سبک
                  li
                    a(href='/tags') تگ
                //- li.divider
                //- li
                //-   a(href='user-profile.html')
                //-     | پروفایل 
                //-     span.badge.pull-right.bg-warning 13
                //- li
                //-   a(href='cart.html')
                //-     | پیام ها
                //-     span.badge.pull-right.bg-default 3
                //- li.divider
                li
                  a(href='/auth/logout') خروج
        li
          a.search-toggle(href='/search')
            i.fa.fa-search

