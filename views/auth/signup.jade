extends ../layout-normal
block content
  .youplay-form
    h2 ثبت نام کاربر عادی
    form(action="/auth/signup", method="post")
      .form-horizontal
        .form-group.m-0

          label.control-label.col-sm-2(for='family_name') نام و نام خانوادگی:
          .col-sm-10
            .youplay-input
              input#family_name(type='text', name="fullname",  placeholder='لطفا نام و نام خانوادگی خود را وارد کنید', required)
          //- label.control-label.col-sm-2(for='username') نام کاربری:
          //- .col-sm-10
          //-   .youplay-input
          //-     input#username(type='text', placeholder='لطفا نام کاربری خود را وارد کنید (حداقل 3 حرف)', required)
          label.control-label.col-sm-2(for='email') پست الکترونیکی:
          .col-sm-10
            .youplay-input
              input#email(type='email', name="email", placeholder='لطفا ایمیل خود را وارد کنید', required)
          label.control-label.col-sm-2(for='password') رمز عبور:
          .col-sm-10
            .youplay-input
              input#password(type='password', name="password", placeholder='لطفا رمز عبور مورد نظر خود را وارد کنید (حداقل 6 حرف)', required)
          label.control-label.col-sm-2(for='confirm_password') تکرار رمز عبور:
          .col-sm-10
            .youplay-input
              input#confirm_password(type='password', name="repeatpassword", placeholder='لطفا رمز عبور خود را مجددا وارد کنید', required)
          label.control-label.col-sm-2(for='tel') شماره تلفن همراه:
          .col-sm-10
            .youplay-input
              input#tel(type='tel', placeholder='لطفا شماره تماس خود را وارد کنید', required)
          label.control-label.col-sm-2(for='age') سن:
          .col-sm-10
            .youplay-input
              input#age(type='text', placeholder='لطفا سن خود را وارد کنید', required)
          label.control-label.col-sm-2(for='gender') جنسیت:
          .col-sm-10
            .youplay-select
              select#gender(name="gender")
                option(value="1") مرد
                option(value="2") زن
          label.col-sm-2  
          .col-sm-10
            button.btn.btn-default.db ثبت نام

