mixin slider(cats)
  .tp-banner-container.rs-youplay
    .tp-banner

      ul
        each cat in cats.slice(0,3)
          li(data-thumb=cat.poster.lg, data-saveperformance='on', data-transition='random-static', data-slotamount='7', data-masterspeed='700')

            img(src='/images/dummy.png', alt=cat.name, data-lazyload=cat.poster.lg, data-bgposition='center top', data-bgfit='cover', data-bgrepeat='no-repeat')
         
            .tp-caption.customin.customout(data-x='left', data-hoffset='60', data-y='center', data-voffset='-60', data-customin='x:200;scaleX:0.5;scaleY:0.5;', data-customout='x:0;scaleX:1;scaleY:1;', data-start='500', data-speed='700', data-easing='Sine.easeInOut', data-endspeed='600', data-endeasing='Linear.easeNone')
              h2.h1= cat.name
              h3.italic-h2= cat.subtitle


            .tp-caption.customin.customout(data-x='left', data-hoffset='60', data-y='center', data-voffset='60', data-customin='x:200;scaleX:0.5;scaleY:0.5;', data-customout='x:0;scaleX:1;scaleY:1;', data-start='1000', data-speed='700', data-easing='Sine.easeInOut', data-endspeed='600', data-endeasing='Linear.easeNone')
              a.btn.btn-lg(href='/games/#{cat._id}/#{cat.name}') بازی نامه

      .tp-bannertimer
